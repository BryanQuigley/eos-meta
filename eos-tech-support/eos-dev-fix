#!/bin/sh

mount -o remount,rw /usr

if [ ! -d /var/lib/dpkg ]; then
  cp -r /ostree/deploy/dev/current/var/lib/dpkg /var/lib/
  cp -r /ostree/deploy/dev/current/var/lib/xml-core /var/lib/
  cp -r /ostree/deploy/dev/current/var/lib/sgml-base /var/lib/
  cp -r /ostree/deploy/dev/current/var/cache/debconf /var/cache/
  apt-get update
fi
